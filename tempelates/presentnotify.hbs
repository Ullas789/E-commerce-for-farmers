        .dropdown-button {
            background-color: #e5eaeb;
            color: #000000;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.2s ease-in-out;
            margin-left: 10px;
        }

        .dropdown-button:hover {
            background-color: #3a4046;
        }

                /* Style for the dropdown content (hidden by default) */
                .dropdown-content {
                    display: none;
                    position: absolute;
                    background-color: transparent;
                    min-width: 160px;
